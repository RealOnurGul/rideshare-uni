generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  university    String?
  phone         String?
  bio           String?   // Short bio for profile
  createdAt     DateTime  @default(now())

  accounts        Account[]
  sessions        Session[]
  vehicles        Vehicle[]
  rides           Ride[]    @relation("DriverRides")
  bookings        Booking[] @relation("PassengerBookings")
  notifications   Notification[]
  messages        Message[]
  reviewsGiven    Review[]  @relation("ReviewsGiven")
  reviewsReceived Review[]  @relation("ReviewsReceived")
}

model Vehicle {
  id           String   @id @default(cuid())
  userId       String
  make         String   // Toyota, Honda, etc.
  model        String   // Camry, Civic, etc.
  year         Int
  color        String
  licensePlate String
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  rides Ride[]
}

model Ride {
  id             String   @id @default(cuid())
  driverId       String
  vehicleId      String?
  origin         String
  originLat      Float?
  originLng      Float?
  destination    String
  destinationLat Float?
  destinationLng Float?
  dateTime       DateTime
  pricePerSeat   Float
  seatsTotal     Int
  seatsAvailable Int
  notes          String?
  
  // Ride status: "upcoming", "in_progress", "completed", "cancelled"
  status         String   @default("upcoming")
  
  // Ride preferences
  luggageSpace   String   @default("medium") // "none", "small", "medium", "large"
  petsAllowed    Boolean  @default(false)
  smokingAllowed Boolean  @default(false)
  musicAllowed   Boolean  @default(true)
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  driver   User      @relation("DriverRides", fields: [driverId], references: [id], onDelete: Cascade)
  vehicle  Vehicle?  @relation(fields: [vehicleId], references: [id])
  bookings Booking[]
  messages Message[]
}

model Booking {
  id          String   @id @default(cuid())
  rideId      String
  passengerId String
  // Status: "pending", "accepted", "declined", "cancelled", "completed"
  status      String   @default("pending")
  
  // Payment tracking (mock for now, will use Stripe/Shop Pay later)
  paymentStatus   String?   // "pending", "held", "released", "refunded"
  paymentAmount   Float?    // Amount in dollars
  paymentIntentId String?   // For Stripe integration later
  paidAt          DateTime? // When passenger paid
  
  // Ride completion confirmation
  confirmedAt     DateTime? // When passenger confirmed ride happened
  confirmDeadline DateTime? // 24 hours after ride start - auto-confirm if not done
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ride      Ride    @relation(fields: [rideId], references: [id], onDelete: Cascade)
  passenger User    @relation("PassengerBookings", fields: [passengerId], references: [id], onDelete: Cascade)
  reviews    Review[] // Multiple reviews per booking (passenger->driver and driver->passenger)

  @@unique([rideId, passengerId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "booking_request", "booking_accepted", "booking_declined", "booking_cancelled", "ride_cancelled"
  title     String
  message   String
  rideId    String?
  bookingId String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id        String   @id @default(cuid())
  rideId    String
  senderId  String?  // Nullable for system messages
  content   String
  isSystem  Boolean  @default(false) // True for system messages like "X joined the ride"
  createdAt DateTime @default(now())

  ride   Ride  @relation(fields: [rideId], references: [id], onDelete: Cascade)
  sender User? @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([rideId, createdAt])
}

model Review {
  id         String   @id @default(cuid())
  bookingId  String   // Allow multiple reviews per booking (passenger->driver and driver->passenger)
  reviewerId String   // The person giving the review
  revieweeId String   // The person being reviewed
  rating     Int      // 1-5 stars
  comment    String?  // Optional comment
  createdAt  DateTime @default(now())

  booking  Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  reviewer User    @relation("ReviewsGiven", fields: [reviewerId], references: [id], onDelete: Cascade)
  reviewee User    @relation("ReviewsReceived", fields: [revieweeId], references: [id], onDelete: Cascade)

  @@unique([bookingId, reviewerId]) // Each person can only review once per booking
}
